<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="256dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_detail_round"
    android:padding="8dp"
    >


  <TextView
      android:id="@+id/types"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="[怪兽|效果|反转] 鸟兽/风 \n[★1] 300/200"
      android:textColor="#333"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="这张卡召唤·反转召唤·特殊召唤成功时，这张卡的表示形式变更。场上的这张卡被破坏送去墓地时，从卡组把1只名字带有「隆隆隆」的怪兽送去墓地。"
      android:textColor="#333"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/types"
      />

</androidx.constraintlayout.widget.ConstraintLayout>